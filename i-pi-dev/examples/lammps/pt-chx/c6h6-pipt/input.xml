<simulation mode="paratemp" verbosity="high">
   <output prefix="C6H6">
      <properties stride='1' filename='out'>  [ step, time{picosecond}, temperature{kelvin}, conserved{electronvolt}, potential{electronvolt}, spring{electronvolt}, kinetic_cv{electronvolt}] </properties>
      <trajectory stride='200' filename='xc'>x_centroid{angstrom}</trajectory>
      <checkpoint stride='20000' />
   </output>
   <paratemp>
      <temp_list units="kelvin"> [ 300,  350 , 420,  510, 650, 800 ] </temp_list>
      <stride> 4.0 </stride>
   </paratemp>
   <total_steps>20000</total_steps>
   <total_time>128000</total_time>
   <prng><seed>8417</seed></prng>
   <ffsocket mode="unix" name="airebo-c6h6">
      <address>airebo-c6h6</address>
   </ffsocket>   
   <system copies="6" prefix="REP">
      <forces><force>airebo-c6h6</force></forces>
      <initialize nbeads='16'>
        <file mode='xyz' units="angstrom"> c6h6.xyz  </file>
        <cell mode='abc' units="angstrom"> [ 100, 100, 100 ] </cell> 
        <velocities mode='thermal' units='kelvin'> 300 </velocities>
      </initialize>
      <ensemble mode='nvt'>
        <thermostat mode='multi'>
          <thermostat mode='pile_l'>
             <tau units="femtosecond">1000</tau>
             <pile_lambda> 0.5 </pile_lambda>
          </thermostat>
          <thermostat mode="svr">
             <tau units="femtosecond"> 1.0 </tau>
          </thermostat>
        </thermostat>
        <timestep units="femtosecond">0.5</timestep>
        <temperature units='kelvin'>300</temperature>
        <fixcom>False</fixcom>      
      </ensemble>
   </system>
</simulation>
