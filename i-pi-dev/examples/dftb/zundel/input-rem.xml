<simulation mode="paratemp" threaded="true">
    <ffsocket mode='unix' name='driver'>
         <latency>  1.00000000e-02</latency>
         <slots>4</slots>
         <port>20614</port>
         <timeout>  6.00000000e+02</timeout>
         <address>dftb-zundel</address>
   </ffsocket>
   <total_steps>400</total_steps>
   <output prefix="data">
      <trajectory stride="2" filename="pos" cell_units="angstrom">positions{angstrom}</trajectory>
      <trajectory stride="2" filename="xc" format="xyz">x_centroid{angstrom}</trajectory>
      <properties stride="2"> [ step, time, conserved, temperature{kelvin}, kinetic_cv, 
            potential, kinetic_cv(H), kinetic_cv(O) ] </properties>
      <properties stride="8" filename="zeta"> [ isotope_zetasc_4th(1.998;H) ] </properties> 
   </output>
   <prng>
      <seed>18885</seed>
   </prng>
   <paratemp>
      <temp_list units="kelvin"> [ 300, 310, 325, 345 ] </temp_list>
      <stride> 10 </stride>
   </paratemp>
   <system prefix="PT" copies="4">
      <forces> <force name="driver">driver</force></forces>
      <initialize nbeads="4">  <!-- beware: this is horribly un-converged, just for test! -->
        <file mode="xyz" units="angstrom">./zundel.xyz</file>
        <cell>
         [   25.29166, 0, 0, 0, 25.29166, 0, 0, 0, 25.29166 ]
        </cell>
        <velocities mode="thermal" units="kelvin">100</velocities>
      </initialize>
      <ensemble mode='nvt'>
         <timestep units="femtosecond"> 0.25 </timestep>
         <thermostat mode='langevin'>
            <tau units="femtosecond">100</tau>
         </thermostat>
         <temperature units="kelvin"> 300.0 </temperature>
      </ensemble>
  </system>
</simulation>
